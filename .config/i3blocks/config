[WEATHER]
command=~/.config/i3blocks/weather/weather_info.sh
interval=20
color=#FEC925

[DISK]
command=df -h / | awk '/\//{ printf(" 💾 %4s/%s ", $4, $2) }'
interval=2
color=#C9E3DB

[BATTERY]
command=~/.config/i3blocks/battery/battery_info.sh
interval=5

[CPU]
full_text= CPU:  0.00% @ +00.0°C 
command=~/.config/i3blocks/cpu/cpu_info.sh
interval=repeat
color=#00B4EB

[MEM]
command=free -h | awk '/Mem:/ { printf(" 🐏 %s/%s ", $3, $2) }'
interval=1
color=#FEC925

[SOUND]
command=~/.config/i3blocks/sound/sound_info.sh
interval=-1
signal=1

[TIME_DATE]
command=date +" %a, %d %b - %H:%M:%S"
interval=1
